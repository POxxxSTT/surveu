<odoo>
    <data>
        <record id="view_answers_comment_mark" model="ir.ui.view">
            <field name="name">Answers Comment Mark</field>
            <field name="model">survey.question</field>
            <field name="inherit_id" ref="survey.survey_question_form"/>
            <field name="arch" type="xml">
                <field name="value" position="after">
                    <field name="comments"/>
                </field>
                <field name="quizz_mark" position="replace">
                    <field name="quizz_mark"/>
                </field>
            </field>
        </record>




        <record id="view_surveu_option" model="ir.ui.view">
            <field name="name">Survey Options</field>
            <field name="model">survey.survey</field>
            <field name="inherit_id" ref="survey.survey_form"/>
            <field name="arch" type="xml">
                <field name="quizz_mode" position="replace">
                    <field name="replace_quizz"/>
                    <field name="comment_answer"/>
                </field>
            </field>
        </record>
    </data>
</odoo>