<odoo>
    <data>

        <template id="assets" inherit_id="website.assets_frontend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/survey_heir/static/src/css/open.css" type="text/css"/>
                <script type="text/javascript" src="/survey_heir/static/src/js/open.js"/>
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
            </xpath>
        </template>

        <template id="homepage_extend" inherit_id="survey.simple_choice">
            <xpath expr="//div[@class='row js_radio']" position='replace'>
                <div t-if="question.display_mode == 'columns' or not token" class="row js_radio">
                    <div t-foreach='question.labels_ids' t-as='label' t-attf-class="col-md-#{question.column_nb}">
                        <label t-att-class="' bg-success ' if quizz_correction and label.quizz_mark > 0.0 else None">
                            <input type="radio" t-att-name="prefix" t-att-value='label.id' class="inp"/>
                            <span t-field='label.value'/>
                            <span t-if="survey.comment_answer == 'display' and label.quizz_mark == 0" class="non" t-field="label.comments"/>
<!--                            <input type="button" value="Проверить" onclick="isEmpty()" class="num"/>-->
<!--                            <span t-if="survey.comment_answer == 'display' and label.quizz_mark == 0" t-field="label.comments" class="text-danger"/>-->
<!--                            <span t-if="quizz_correction and label.quizz_mark > 0.0" t-field="label.comments" class="text-danger" />-->
                        </label>
                    </div>
                    <div t-if='question.comments_allowed and question.comment_count_as_answer' class="js_comments col-md-12">
                        <label>
                            <input type="radio" t-att-name="prefix" value="-1"/>
                            <span t-field="question.comments_message"/>
                        </label>
                        <input type="text" class="form-control" t-att-name="'%s_%s' % (prefix, 'comment')"/>
                    </div>
                    <div t-if='question.comments_allowed and not question.comment_count_as_answer' class="col-md-12">
                        <span t-field="question.comments_message"/>
                        <input type="text" class="form-control" t-att-name="'%s_%s' % (prefix, 'comment')" data-oe-survey-othert="1"/>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>

